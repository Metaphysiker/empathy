<% if page.cover.attached? %>
  <section class="bg-b-color text-center">
          <%= image_tag(page.cover, class: "img-fluid rounded") %>
  </section>
<% end %>


<div class="container">



  <h3 class="text-h-color spaced-letters font-weight-light text-uppercase"><%= page.title %></h3>
  <p class="font-weight-bold text-muted pt-3">
    <%= page.description %>
  </p>
  <p>
    <div style="font-size: large;">
      <%= raw sanitizing(page.content) %>
    </div>
  </p>
  <% if is_current_user_admin? %>
    <div class="text-center m-2">
      <hr />
      <%= link_to 'Eintrag bearbeiten', edit_page_path(page), class: "btn btn-primary m-2" %>
      <%= link_to 'Eintrag lÃ¶schen', page_path(page), method: :delete, data: {confirm: 'Bist du sicher?'}, class: "btn btn-danger m-2" %>
    </div>
  <% end %>
</div>
