<div class="chat-section-field">
  <div class="row">
      <div class="col-12 d-flex align-items-end justify-content-end">
        <%#= image_tag @account.portrait_name, class: "rounded-circle border-white white-border-for-rounded-circle bg-white mr-3", width: "50" %>
        <%#= image_tag "portrait_mann.png", class: "rounded-circle border-white white-border-for-rounded-circle bg-white mr-3", width: "50px", height: "50px" %>

        <div class="chat-argument-field <%= dom_id(chat_message) %>">
          <%= raw sanitizing(chat_message.content) unless chat_message.blank? %>
          <% if false #is_current_user_admin? %>
            <div class="text-center m-2">
              <hr />
              <%= link_to 'Eintrag bearbeiten', edit_chat_message_path(chat_message), class: "btn btn-primary m-2" %>
              <%= link_to 'Eintrag lÃ¶schen', chat_message_path(chat_message), method: :delete, data: {confirm: 'Bist du sicher?'}, class: "btn btn-danger m-2" %>
              <%= link_to 'Neuer Eintrag', new_chat_message_path, class: "btn btn-light m-2" %>
            </div>
          <% end %>
        </div>
        <div style="padding-left: 0.5rem;">
          <%= image_tag "portrait_mann.png", class: "rounded-circle border-white white-border-for-rounded-circle bg-white", width: "50px", height: "50px" %>
        </div>
      </div>
  </div>
</div>
